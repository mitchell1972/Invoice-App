{
  "buildCommand": "cd frontend && rm -rf node_modules .vite dist && npm cache clean --force && npm install && npm run build",
  "outputDirectory": "frontend/dist",
  "framework": null,
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "no-cache, no-store, must-revalidate"
        }
      ]
    }
  ],
  "functions": {
    "api/**/*.js": {
      "maxDuration": 10
    }
  },
  "crons": [
    {
      "path": "/api/invoices/remind-overdue",
      "schedule": "0 9 * * *"
    }
  ],
  "rewrites": [
    { "source": "/api/:path*", "destination": "/api/:path*" },
    { "source": "/(.*)", "destination": "/$1" }
  ]
}


