{
  "buildCommand": "cd frontend && npm install && npm run build",
  "outputDirectory": "frontend/dist",
  "framework": null,
  "functions": {
    "api/**/*.js": {
      "maxDuration": 10,
      "runtime": "nodejs20.x"
    }
  },
  "crons": [
    {
      "path": "/api/invoices/remind-overdue",
      "schedule": "0 9 * * *"
    }
  ],
  "rewrites": [
    { "source": "/api/:path*", "destination": "/api/:path*" },
    { "source": "/(.*)", "destination": "/$1" }
  ]
}


