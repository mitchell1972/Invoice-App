{
  "version": 2,
  "builds": [
    { "src": "api/**/*.js", "use": "@vercel/node" },
    { "src": "frontend/package.json", "use": "@vercel/static-build", "config": { "distDir": "dist" } }
  ],
  "routes": [
    { "src": "^/api/(.*)$", "dest": "/api/$1" },
    { "src": "^/(assets/.*)$", "dest": "/frontend/dist/$1" },
    { "src": "^/pay/(.*)$", "dest": "/frontend/dist/index.html" },
    { "src": ".*", "dest": "/frontend/dist/index.html" }
  ]
}


