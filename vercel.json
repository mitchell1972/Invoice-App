{
  "version": 2,
  "builds": [
    { "src": "api/**/*.js", "use": "@vercel/node" },
    { "src": "frontend/dist/**", "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "^/api/(.*)$", "dest": "/api/$1" },
    { "src": "/pay/(.*)", "dest": "/frontend/dist/index.html" },
    { "src": "/(.*)", "dest": "/frontend/dist/$1" },
    { "src": "^/$", "dest": "/frontend/dist/index.html" }
  ]
}


